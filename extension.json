{
	"name": "Theme Toggle",
	"version": "0.1.0",

	"author": [
		"alex4401"
	],
	"url": "https://gitlab.mglolenstine.xyz/alex4401/mediawiki-extension-themetoggle",
	"descriptionmsg": "themetoggle-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",

	"requires": {
		"MediaWiki": ">= 1.37.0",
		"platform": {
			"php": ">= 7.4"
		}
	},

	"MessagesDirs": {
		"ThemeToggle.class": [
			"i18n"
		]
	},

	"ResourceFileModulePaths": {
		"localBasePath": "modules",
		"remoteExtPath": "ThemeToggle/modules"
	},

	"ResourceModules": {
		"ext.themes.simpleSwitcher": {
			"dependencies": [
				"ext.themes.siteMessages"
			],
			"packageFiles": [
				"simpleSwitcher/main.js",
				"shared.js"
			],
			"styles": [
				"simpleSwitcher/styles.less"
			],
			"messages": [
				"themetoggle-simple-switch"
			],
			"targets": [ "desktop", "mobile" ]
		}
	},

	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\Ark\\ThemeToggle\\": "includes/"
	},
	
	"HookHandlers": {
		"Hooks": {
			"class": "MediaWiki\\Extension\\Ark\\ThemeToggle\\Hooks"
		}
	},
	"Hooks": {
		"PageDeleteComplete": "Hooks",
		"PageSaveComplete": "Hooks",
		"BeforePageDisplay": "Hooks",
		"ResourceLoaderRegisterModules": "Hooks",
		"GetPreferences": "Hooks",
		"UserGetDefaultOptions": "Hooks"
	},

	"config": {
		"ThemeToggleDefault": {
			"value": "auto",
			"description": "Default theme. Valid values are 'auto', 'light', 'dark'."
		},
		"ThemeToggleSiteCssBundled": {
			"value": [],
			"description": "The default theme (or fallback if auto) should be specified here at minimum."
		},
		"ThemeToggleSwitcherStyle": {
			"value": "simple",
			"description": ""
		},
		"ThemeToggleEnableForAnonymousUsers": {
			"value": false
		}
	},

	"manifest_version": 2
}
